        {
          "id": "message",
          "label": "Message (from trigger)",
          "type": "text",
          "defaultValue": "${trigger.message}",
          "isReadOnly": true
        },
        {
          "id": "emoji",
          "label": "Emoji name (without colons)",
          "type": "text"
        }
      ]
    },
    {
      "id": "remove_reaction_from_message",
      "label": "Remove Reaction from Message",
      "description": "Remove emoji reaction from the trigger message",
      "fields": [
        {
          "id": "message",
          "label": "Message (from trigger)",
          "type": "text",
          "defaultValue": "${trigger.message}",
          "isReadOnly": true
        },
        {
          "id": "emoji",
          "label": "Emoji name (without colons)",
          "type": "text"
        }
      ]
    },
    {
