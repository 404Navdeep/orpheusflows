      "fields": [
        {
          "id": "channelid",
          "label": "Channel ID",
          "type": "text"
        },
        {
          "id": "user_source",
          "label": "User",
          "type": "select",
          "options": ["From Trigger", "Manual Input"]
        },
        {

          "id": "slack_id",
          "label": "Slack User ID (if manual)",
          "type": "text"
        }
      ]
    },
    {
      "id": "convert_user_id_to_user",
      "label": "Convert user ID to user",
      "description": "Convert user ID to user",
      "fields": [
        {
          "id": "user_id",
          "label": "User ID",
          "type": "text"
        }
      ]
    },
    {
      "id": "convert_user_to_user_id",
      "label": "Convert user to user ID",
