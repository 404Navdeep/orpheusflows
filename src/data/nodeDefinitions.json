{
  "triggers": [
    {
      "id": "link_manual",
      "label": "Link / Manual",
      "description": "Workflow link will be dmed to you as soon as you publish the workflow.",
      "fields": []
    },
    {
      "id": "cron_schedule",
      "label": "Cron Schedule",
      "description": "Cron expression (in UTC)",
      "fields": [
        {
          "id": "duration",
          "label": "Cron expression (in UTC)",
          "type": "text"
        } 
      ]
    },
    {
      "id": "user_join",
      "label": "User Join Channel",
      "description": "Triggered when a user joins a channel",
      "fields": [
        {
          "id": "channelid",
          "label": "Channel ID",
          "type": "text"
        } 
      ]
    },
    {
      "id": "message_sent",
        "label": "Message Sent",
        "description": "Triggered when a message is sent to a channel",
      "fields": [
        {
          "id": "channelid",
          "label": "Channel ID",
          "type": "text"
        } 
      ]
    },
    {
      "id": "reaction_added",
        "label": "Reaction Added",
        "description": "Triggered when a reaction is added to a message",
      "fields": [
        {
          "id": "channelid",
          "label": "Channel ID",
          "type": "text"
        },
        {
          "id": "emoji",
          "label": "Emoji that triggers the workflow (without colons)",
          "type": "text"
        } 
      ]
    }
  ],
  "steps": [
    {
      "id": "add_user_to_channel",
      "label": "Add a user to a channel",
      "description": "Add a user to a channel",
      "fields": [
        {
          "id": "channelid",
          "label": "Channel ID",
          "type": "text"
        },
        {
          "id": "user_source",
          "label": "User",
          "type": "select",
          "options": ["From Trigger", "Manual Input"]
        },
        {

          "id": "slack_id",
          "label": "Slack User ID (if manual)",
          "type": "text"
        }
      ]
    },
    {
      "id": "archive_channel",
      "label": "Archive a channel",
      "description": "Archive a channel",
      "fields": [
        {
          "id": "channelid",
          "label": "Channel ID",
          "type": "text"
        }
      ]
    },
    {
      "id": "create_private_channel",
      "label": "Create a private channel",
      "description": "Create a private channel",
      "fields": [
        {
          "id": "name",
          "label": "Name",
          "type": "text"
        }
      ]
    },
    {
      "id": "create_public_channel",
      "label": "Create a public channel",
      "description": "Create a public channel",
      "fields": [
        {
          "id": "name",
          "label": "Name",
          "type": "text"
        }
      ]
    },
    {
      "id": "remove_user_from_channel",
      "label": "Remove a user from a channel",
