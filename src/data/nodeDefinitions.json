          "isReadOnly": true
        },
        {
          "id": "message",
          "label": "Message",
          "type": "text"
        },
        {
          "id": "interactive_components",
          "label": "Interactive components - Enter a JSON array of interactive buttons. You can use the helper on the App Home of Winterflows to help you build this array.",
          "type": "textarea"
        }
      ]
    },
    {
      "id": "send_message_to_channel",
      "label": "Send a message to a channel",
